<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/label}: ${view/siteInfo/name}">
        Change About
      </span>
    </title>
    <tal:block metal:fill-slot="metadata">
      <link rel="up" href="/" title="Site Home" 
            tal:attributes="title string:${view/siteInfo/name} Home;"/>
    </tal:block>
  </head>
  <body>
    <tal:block content="structure provider:groupserver.FormStatusMessage"
      define="errors view/errors; status view/status; widgets view/widgets"
      metal:fill-slot="messages">&#160;</tal:block>
    <ul metal:fill-slot="breadcrumb">
      <li><a tal:attributes="title string:${view/siteInfo/name} Homepage"
             href="/" title="Home">&#8962;</a></li>
      <li>
        <span tal:content="view/label">This page</span>
      </li>
    </ul>
    <tal:block metal:fill-slot="body">
      <form enctype="multipart/form-data"  method="post" action="."
        tal:attributes="action request/URL" id="edit-profile">
        <h1 tal:content="view/label">Change</h1>
        <tal:block define="widgets view/widgets"
          replace="structure provider:groupserver.FormWidgets"/>
        <div class="buttons" tal:condition="view/availableActions">
          <tal:block repeat="action view/actions">
            <div class="formelementbutton">
              <span tal:replace="structure action/render">Button</span>
            </div>
          </tal:block>
        </div><!--buttons-->
      </form>
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <script src="/++resource++gs-site-welcome-change-20130304.js"
              defer="true" type="text/javascript">&#160;</script>
    </tal:block>
  </body>
</html>
